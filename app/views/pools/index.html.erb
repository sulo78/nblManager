<% @title = "Pools verwalten" %>

<h2>Liste der Pools</h2>

<table class="table">
  <tr>
    <th>Pool</th>
    <th></th>
    <th></th>	
  </tr>
  <% @pools.each do |pool| %>
    <tr>
      <td><%= pool.pool_name %></td>
      <td><%= link_to "<i class=\"icon-edit\"></i>".html_safe, edit_pool_path(pool), :class => "btn btn-small btn-warning" %></td>
      <td><%= link_to "<i class=\"icon-remove\"></i>".html_safe, pool, :class => "btn btn-small btn-danger", :confirm => "Wollen Sie diesen Pool wirklich löschen?", method: :delete %></td>
    </tr>
  <% end %>  
</table>

<br />

<%= link_to "Pool hinzufügen", new_pool_path, :class => "btn btn-primary" %>
