<% @title = "Pool bearbeiten" %>

<h2>Poolname ändern</h2>

<%= form_for @pool do |f| %>
  <% if @pool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pool.errors.count, "error") %> prohibited this pool from being saved:</h2>

      <ul>
      <% @pool.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :pool_name, "Poolname:" %><br />
    <%= f.text_field :pool_name %>
  </div>

  <div class="actions">
    <%= f.submit "Pool ändern" %>
  </div>
<% end %>
