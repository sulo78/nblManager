<% @title = "Ausleihe Details" %>

<h3>Details zur Ausleihe</h3>

<div class="span5">
  <table class="table table-bordered">
    <tr>
      <th>Notebook:</th>
      <td><%= @lending.notebook.nb_name %></td>
    </tr>
    <tr>
      <th>Raum:</th>
      <td><%= @lending.room_nr %></td>
    </tr>
    <tr>
      <th>von:</th>
      <td><%= @lending.lending_start.to_formatted_s(:short) %> Uhr</td>
    <tr/>
    <tr>
      <th>bis:</th>
      <td><%= @lending.lending_end.to_formatted_s(:short) %> Uhr</td>
    </tr>
    <tr>
      <th>Verliehen an:</th>
      <td><%= @lending.lender_name %> <%= @lending.lender_surname %></td>
    </tr>
    <tr>
      <th>Tel:</th>
      <td><%= @lending.lender_phone %></td>
    </tr>
  </table>	
</div>

<div class="span5">
  <table class="table table-bordered">
    <tr>
      <th>Kommentar: <%= link_to "<i class=\"icon-edit\"></i>".html_safe, edit_lending_path(@lending), :class => "btn btn-warning" %></th>
    </tr>
    <tr>
      <td><%= @lending.comment %></td>
    </tr>
  </table>
</div>

