<% @title = "Notebooks ausleihen" %>

<% location = Location.find_by_loc_acronym("AP1") %>

<div class="span5">
<h2>Notebooks</h2>
<% location.notebooks.each do |nb| %>
  <% if nb.is_lent == false %>
    <div class="available span5">
  <% else %>
    <div class="islent span5">
  <% end %>
    <table class = "table table-bordered">
      <tr>
        <th>Notebookname</th>
        <th>Hersteller</th>
        <th>Modell</th>
        <th></th>
      </tr>
      <tr>
        <td><%= nb.nb_name %></td>
        <td><%= nb.manufactor %></td>
        <td><%= nb.nb_type %></td>
        <% if nb.is_lent == false %>
          <td><%= link_to "Ausleihen", new_lending_path(:notebook_id => nb), class: "btn btn-primary" %></td>
        <% else %>
          <td>verliehen!</td>
        <% end %>
      </tr>
    </table>
  </div>
<% end %>	
</div>

<div class="span5">
<h2>Ausleihen</h2>
<% @lendings.each do |l| %>
  <div class="span5">
    <table class="table table-bordered">
    	<tr>
    	  <th><%= l.lender_name %></th> 
    	  <th><%= l.lender_surname %></th>
    	  <th><%= l.notebook_id %></th>
    	  <td><%= link_to "<i class=\"icon-remove\"></i>".html_safe, l, :class => "btn btn-small btn-danger", :confirm => "Wollen Sie dieses Notebook wirklich zurÃ¼ckgeben?", method: :delete %>
    	</tr>
    </table>
  </div>
<% end %>	
</div>
