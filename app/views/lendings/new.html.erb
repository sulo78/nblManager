<% nb = @notebook %>

<h2><%= nb.nb_name %> ausleihen</h2>

  <table class = "table">
    <tr>
      <th>Notebookname:</th><td><%= nb.nb_name %></td>
    </tr>
    <tr>
      <th>Hersteller:</th><td><%= nb.manufactor %></td>
    </tr>  
    <tr>
      <th>Modell:</th><td><%= nb.nb_type %></td>
    </tr> 
    <tr>
      <th>Service-Tag:</th> <td><%= nb.serial %></td>
    </tr>  
  </table>
  
<h3>Zeitraum</h3>
    <%= simple_form_for(@lending, :html => {:class => "form-vertical" }) do |z| %>
      <%= z.input :lending_start, label: "von" %> 
      <%= z.input :lending_end, label: "bis" %> 
    <% end %>	

  
<h3>Nutzerdaten:</h3>
    
  <%= simple_form_for(@lending, :html => {:class => "form-horizontal" }) do |f| %>
    <%= f.input :lender_name, label: "Vorname" %> 
    <%= f.input :lender_surname, label: "Nachname" %> 
    <%= f.input :lender_phone, label: "Durchwahl" %> 
    <%= f.input :department, label: "Lehrstuhl" %>
    <%= f.input :room_nr, label: "Veranstaltungsraum" %>
    <%= f.input :accessories, label: "ZubehÃ¶r", as: :text, :input_html => { :rows => 5 } %>
    <%= f.input :comment, label: "Kommentar", as: :text, :input_html => { :rows => 5 } %>
    <%= f.input :notebook_id, :as => :hidden, :input_html => { :value => @notebook.id } %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => @user.id } %>
    <%= f.submit "Ausleihen", class: "btn btn-success " %> (Ausgabe durch: <b><%= @user.username %></b>)
  <% end %>
  
