<% @title = "Login" %>

<h2>Log in</h2>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :username, "Benutzername" %><br />
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%= label_tag :password, "Passwort" %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
